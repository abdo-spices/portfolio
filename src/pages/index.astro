type EducationType = {
	degree: string;
	institution: string;
	location: string;
	start_time: string;
	end_time: string;
};

type ProjectType = {
	name: string;
	description: string;
	technologies: string[];
	link?: string;
};

type ContactType = {
	email: string;
	phone: string;
	location: string;
	linkedin: string;
	github: string;
};

type ProfileType = {
	name: string;
	summary: string;
};

type SkillsType = {
	technical: {
		[category: string]: string[];
	};
